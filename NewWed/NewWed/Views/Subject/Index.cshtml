@model IEnumerable<NewWed.Models.SubjectDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<!-- Đoạn cần thêm -->
<div class="container">
    <b>Search BY:</b>
    <select id="SearchBy">
        <option value="Name"></option>
        <option value="ID"></option>
    </select>

    <p>
        Title: @Html.TextBox("SearchSub") <input type="submit" id="SearchBtn" value="Tìm kiếm" />
    </p>

</div>
<p>
    @Html.ActionLink("Create", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SubjectID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubjectName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SubjectID }) |
                @Html.ActionLink("Details", "Details", new { id = item.SubjectID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SubjectID })
            </td>
        </tr>
    }

</table>
